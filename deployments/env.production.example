# GinForge 生产环境配置示例
# 复制此文件为 .env.production 并修改相应配置

# === 应用配置 ===
APP_ENV=production
APP_DEBUG=false

# === 数据库配置 ===
DB_DRIVER=mysql
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=ginforge
MYSQL_USER=ginforge
MYSQL_PASSWORD=ginforge_secure_password_2024
MYSQL_ROOT_PASSWORD=root_secure_password_2024

# === Redis 配置 ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_secure_password_2024
REDIS_DB=0

# === JWT 配置 ===
JWT_SECRET=your-very-strong-jwt-secret-key-change-me-in-production-2024

# === 服务端口 ===
GATEWAY_PORT=8080
USER_API_PORT=8081
MERCHANT_API_PORT=8082
ADMIN_API_PORT=8083
GATEWAY_WORKER_PORT=8084
FILE_API_PORT=8086

# === Nginx 配置 ===
NGINX_PORT=80
NGINX_HTTPS_PORT=443

# === 文件上传配置 ===
STORAGE_TYPE=local
STORAGE_MAX_FILE_SIZE=104857600
STORAGE_URL_PREFIX=http://yourdomain.com/uploads

# === 日志配置 ===
LOG_LEVEL=info
LOG_FORMAT=json

# === 限流配置 ===
RATE_LIMIT_RPS=1000
RATE_LIMIT_BURST=2000

# === CORS 配置 ===
CORS_ORIGINS=https://yourdomain.com,https://admin.yourdomain.com

