package router

import (
	"time"

	"github.com/gin-contrib/cors"
	"github.com/gin-gonic/gin"

	"goweb/pkg/config"
	"goweb/pkg/logger"
	"goweb/pkg/middleware"
	"goweb/services/{{.ServiceName}}/internal/handler"
)

func NewRouter(cfg *config.Config, log logger.Logger, {{.ServiceName}}Handler *handler.{{.ServiceName}}Handler) *gin.Engine {
	if cfg.IsProduction() {
		gin.SetMode(gin.ReleaseMode)
	}

	r := gin.New()
	r.Use(middleware.Recovery(log))
	r.Use(middleware.RequestID())
	r.Use(middleware.AccessLogger(log))
	r.Use(cors.New(cors.Config{
		AllowOrigins:     []string{"*"},
		AllowMethods:     []string{"GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"},
		AllowHeaders:     []string{"Origin", "Content-Type", "Accept", "Authorization", "X-Request-Id"},
		ExposeHeaders:    []string{"X-Request-Id"},
		AllowCredentials: true,
		MaxAge:           12 * time.Hour,
	}))

	// 健康检查
	r.GET("/healthz", func(c *gin.Context) {
		c.JSON(200, gin.H{"status": "ok", "service": "{{.ServiceName}}"})
	})

	// 设置处理器日志
	{{.ServiceName}}Handler.SetLogger(log)

	// API路由
	api := r.Group("/api/v1")
	{
		// 示例路由
		api.GET("/data", {{.ServiceName}}Handler.GetData)
		api.POST("/data", {{.ServiceName}}Handler.CreateData)
	}

	return r
}
